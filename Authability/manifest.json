{
    "manifest_version": 3,
    "name": "Auth Accessibility Extension",
    "description": "Runs a script on www.example.com automatically when user installs the extension",
    "version": "1.0",
    "background": {
        "service_worker": "src/background.js"
    },
    "icons": {
        
      "16": "html/imgs/gw_monogram_blue.png",
      "32": "html/imgs/gw_monogram_blue.png",
      "48": "html/imgs/gw_monogram_blue.png",
      "128": "html/imgs/gw_monogram_blue.png"
    },
    "side_panel": {
        "default_path": "html/side_panel.html",
        "open_panel_on_action": true
    },
    "action": {
        "default_title": "Open Authability"
    },
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ],
    "permissions": [
        "storage",
        "scripting",
        "sidePanel",
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"
            ],
            "js": [
                "src/content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "html/*.html",
                "html/css/*.css"
            ],
            "matches": [
                "https://*/*",
                "http://*/*"
            ]
        }
    ]
  }